<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_layout"
    android:background="#0f4741"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:id="@+id/scrollview"
        android:layout_below="@+id/toolbar">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                style="@style/aut_sig_p_text"
                android:textColor="@color/white"
                >
            </TextView>

            <EditText
                android:id="@+id/txt_name"
                style="@style/aut_sig_p_input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter ur name"
                android:background="#79bdb5">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOB"
                android:textColor="@color/white"
                style="@style/aut_sig_p_text">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_dob"
                android:hint="Select DOB"
                android:background="#79bdb5"
                style="@style/aut_sig_p_input_field">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/white"
                style="@style/aut_sig_p_text">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_password"
                android:hint="Enter Password"
                android:background="#79bdb5"
                style="@style/aut_sig_p_input_field">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/white"
                style="@style/aut_sig_p_text">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_conpass"
                android:background="#79bdb5"
                android:hint="Enter Confrim Password"
                style="@style/aut_sig_p_input_field">
            </EditText>

            <Button
                android:id="@+id/btn_signup"
                style="@style/Animation.Design.BottomSheetDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_25sp"
                android:text="Sign Up">

            </Button>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/prgLoading"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/Widget.AppCompat.ProgressBar"/>
</RelativeLayout>
