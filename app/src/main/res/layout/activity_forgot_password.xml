<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar2" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section: Validate User -->
            <LinearLayout
                android:id="@+id/forgot_layout_validate_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/black"
                    style="@style/aut_sig_p_text" />

                <EditText
                    android:id="@+id/forgot_edt_dob"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/mo_re"
                    android:hint="Select Name"
                    android:inputType="text"
                    android:textDirection="locale"
                    android:maxLength="15"
                    android:textAlignment="viewStart"
                    android:importantForAutofill="no"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="#79bdb5"
                    style="@style/aut_sig_p_input_field" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/black"
                    style="@style/aut_sig_p_text" />

                <EditText
                    android:id="@+id/forgot_edt_passportId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/mo_re"
                    android:hint="Select Email"
                    android:inputType="textEmailAddress"
                    android:textDirection="locale"
                    android:maxLength="50"
                    android:importantForAutofill="no"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="#79bdb5"
                    style="@style/aut_sig_p_input_field" />
            </LinearLayout>

            <!-- Section: New Password (hidden) -->
            <LinearLayout
                android:id="@+id/forgot_layout_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Password"
                    android:fontFamily="@font/mo_re"
                    style="@style/aut_sig_p_text" />

                <EditText
                    android:id="@+id/forgot_edt_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/mo_re"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:textDirection="locale"
                    android:maxLength="10"
                    android:importantForAutofill="no"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    style="@style/aut_sig_p_input_field" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:fontFamily="@font/mo_re"
                    style="@style/aut_sig_p_text" />

                <EditText
                    android:id="@+id/forgot_edt_conform_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/mo_re"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:textDirection="locale"
                    android:maxLength="10"
                    android:importantForAutofill="no"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    style="@style/aut_sig_p_input_field" />
            </LinearLayout>

            <!-- Button -->
            <TextView
                android:id="@+id/forgot_txt_next_or_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/green_dark"
                android:gravity="center"
                android:padding="12dp"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/prgLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        style="@style/Widget.AppCompat.ProgressBar" />

</RelativeLayout>