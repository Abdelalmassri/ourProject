<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MijnProject" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/yellow_accent</item>
    </style>


    <style name="aut_sig_p_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="aut_sig_p_text.link" parent="@style/aut_sig_p_text">
        <item name="android:textColor">@color/green_primary</item>
        <item name="android:background">@drawable/gradient_bg</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">8.0dip</item>
        <item name="android:paddingEnd">8.0dip</item>
    </style>

    <style name="aut_sig_p_input_field">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:textColorHint">#ff333333</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:layout_marginBottom">16.0dip</item>
        <item name="android:padding">12sp</item>
    </style>

    <style name="SignUpButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/yellow_accent</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="PageTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ProfileItem">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="ProfileLabel">
        <item name="android:textColor">#D32F2F</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProfileValue">
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>